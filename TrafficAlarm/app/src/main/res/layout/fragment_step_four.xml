<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Widget.TextView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="How often will you be taking this route?" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp">

        <RadioButton
            android:id="@+id/rb_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Off" />

        <RadioButton
            android:id="@+id/rb_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat" />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/rl_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton


            android:id="@+id/button_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/calendar"
            android:text="Select" />

        <TextView
            android:id="@+id/edit_text_date"
            style="@style/Widget.TextView.Padded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_select_date"
            android:layout_centerHorizontal="true"
            android:text="Pick a date" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_days_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="50sp"
        android:visibility="gone">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="S"
            android:textOn="S" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="M"
            android:textOn="M" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="T"
            android:textOn="T" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="W"
            android:textOn="W" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="T"
            android:textOn="T" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="F"
            android:textOn="F" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="S"
            android:textOn="S" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_select_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:src="@drawable/clock"
        />

    <TextView
        android:id="@+id/edit_text_time"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.TextView.Padded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pick a time" />
</LinearLayout>